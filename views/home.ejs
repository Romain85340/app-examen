<%- include("./partials/header") -%>
<%- include("./partials/navbar") -%>
<div class="under-navbar"></div>

<main class="home">
  <!-- Eye catcher -->
  <section class="container-fluid eyecatcher">  
    <div class="col-md-12 d-flex align-items-center justify-content-center flex-column">  
      <h1 class="font-weight-bold">Bienvenue sur Blog Sport</h3>
      <p class="text-muted">Lorem ipsum dolor, sit amet consectetur adipisicing elit. Id quam sapiente molestiae numquam quas, voluptates omnis nulla ea odio quia similique corrupti magnam, doloremque laborum. Lorem ipsum dolor, sit amet consectetur adipisicing elit. Id quam sapiente  molestiae numquam quas, voluptates omnis nulla ea odio quia similique corrupti magnam, doloremque laborum.</p>
      <div class="button-eyecatcher">
        <a class="btn btn-primary btn-md ml-0" href="#" role="button">Ajoutez un article</a>
        <a class="btn btn-primary btn-md ml-0" href="#" role="button">Lire les derniers articles</a>
      </div> 
    </div>
    <div class="col-md-12 d-flex justify-content-center">
      <video autoplay muted loop src="/video/UNDER+ARMOUR+_+THE+ONLY+WAY+IS+THROUGH.mp4" autostart="false"></video>
    </div> 
  </section>

  <!-- Last post-->
  <section class="container last-post">
    <h1>Les articles récents</h1>

    <% posts.forEach(function(entry) {%>
    <div class="card">
      <div class="card-header">
        <img src="<%= entry.image%>" class="img-fluid" alt="">
      </div>
      <div class="card-body d-flex flex-column">
        <h5 class="card-title"><%= entry.title%></h5>
        <p class="card-text"><%= entry.content%></p>
        <ul class="status d-flex justify-content-around flex-wrap">
          <li style="color: #007bff;"><span><%= entry.good_status%> personnes aiment cet article </span><i class="fas fa-thumbs-up"></i></li>         
          <li style="color: #007bff;"><span><%= entry.bad_status%> personnes n'aiment pas cet article </span><i class="fas fa-thumbs-down"></i></li>
          <li style="color: #007bff;"><span><%= entry.comment%> personnes ont commenté </span><i class="fas fa-comment"></i></li>
        </ul>
        <div class="btn-card d-flex justify-content-between flex-wrap">
          <a href="/articles/<%= entry.id_category%>/<%= entry.id%>" class="btn btn-primary">Lire l'article</a>
        </div>
      </div>
    </div>
    <%});%>
    
  </section>

  <!-- Category-->
  <section class="category" id="categories">

    <h1>Spécifier votre recherche</h1>

    <div class="swiper-container">
      <div class="swiper-wrapper">

        <% categories.forEach(function(entry) {%>
        <div class="swiper-slide">
          <div class="card-category" style="width: 18rem;">
            <img src="<%= entry.image%>" class="card-img-top" alt="...">
            <div class="card-category-content text-center">
              <h2><%= entry.title%></h2>
              <a href="/articles/<%= entry.id%>" class="btn btn-primary">Voir les articles</a>
            </div>
          </div>
        </div>
        <%});%>

      </div>
      <!-- Add Pagination -->
      <div class="swiper-pagination"></div>
    </div>
  </section>
</main>

<%- include('./partials/footer') -%>